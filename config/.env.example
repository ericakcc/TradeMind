# BSCScan API Configuration
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Etherscan API Configuration (for future use)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Database Configuration
DATABASE_URL=sqlite:///data/trademind.db

# Monitoring Settings
WHALE_THRESHOLD_USD=100000  # Minimum transaction value to consider as "whale"
CHECK_INTERVAL_SECONDS=60   # How often to check for new transactions
MAX_API_CALLS_PER_SECOND=4  # Stay under BSCScan limit of 5/sec

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trademind.log